<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/bg_register"
    android:weightSum="1" android:padding="10dp" android:paddingLeft="20dp"
    android:paddingRight="20dp" >


    <ImageView
        android:id="@+id/list_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="5dip"
        android:scaleType="centerInside"
        android:src="@drawable/foods" />

    <Button
            android:id="@+id/changephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_image"
            android:layout_marginTop="1dip"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:text=" change the photo "
            android:layout_alignLeft="@+id/list_image"
            android:layout_alignRight="@+id/list_image"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bg_main"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:onClick="toChangePhoto" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="  名字"
        android:textColor="#ea4c88"
        android:textSize="16dip"
        android:layout_weight="0.07" />


    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:hint="@string/hint_name"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <Button
        android:id="@+id/edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/btn_login_bg"
        android:text="確定更改"
        android:textColor="@color/bg_register" />


</LinearLayout>