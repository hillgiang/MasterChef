<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ImageView
        android:id="@+id/list_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="5dip"
        android:scaleType="centerInside"
        android:src="@drawable/foods" />

    <Button
            android:id="@+id/changephtot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_image"
            android:layout_marginTop="1dip"
            android:background="@null"
            android:text=" change the photo "
            android:layout_alignLeft="@+id/list_image"
            android:layout_alignRight="@+id/list_image"
            android:layout_gravity="center"
            android:textColor="@color/bg_main"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:onClick="toChangePhoto" />



        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:hint="@string/hint_name"
            android:padding="15dp"
            android:inputType="textCapWords"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

    <Button
        android:id="@+id/edit"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_below="@+id/name"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:background="@color/btn_login_bg"
        android:onClick="EditUser"
        android:padding="15dip"
        android:text="確定更改"
        android:textColor="@color/bg_register"
        android:textSize="16dip" />


</LinearLayout>