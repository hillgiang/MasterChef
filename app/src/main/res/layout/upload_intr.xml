<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UploadIntro">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="350dip"
        android:layout_alignParentTop="true"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.19"
            app:srcCompat="@drawable/ic_action_camera" />

        <TextView
            android:id="@+id/title"
            android:layout_width="157dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_weight="0.19"
            android:text="巧克力蛋糕"
            android:textSize="24dp" />


        <LinearLayout
            android:id="@+id/linearLayout100"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="25dip"
                android:layout_height="40dip"
                android:layout_marginStart="12dp"
                android:layout_weight="0.19"
                app:srcCompat="@drawable/member" />

            <TextView
                android:id="@+id/username"
                android:layout_width="225dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_weight="0.19"
                android:text="我是小當家的哥哥"
                android:textSize="24sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="輸入食譜說明..."/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.19"
            android:background="@color/cardview_shadow_start_color"
            android:text="烹調時間(分鐘)"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/cookmin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView10"
            android:layout_weight="0.19"
            android:popupBackground="@color/white" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.19"
            android:background="@color/cardview_shadow_start_color"
            android:text="份量(人份)"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/cookpeo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView10"
            android:layout_weight="0.19"
            android:popupBackground="@color/white" />
    </LinearLayout>


</RelativeLayout>